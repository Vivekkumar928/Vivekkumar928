             Void circumf (); void print ();
}
   Void circle :: assign ();
     {
Cout <<”type the x&y co-ordinate of the center \n;
Cin>>x>>y;
Cout<<” type the radius:-“;
Cin>>r j
}
Void circle :: area ()
{
Area1 = 3.14*r*r;
}
Void circle :: circumf()
{
Circum=2*3.14*r
}
Void circle ::print c()
{
Cout <<”x,y co-ordinates = “<<x<<”\+”<<y<<end1;
Cout <<”the radius is = “<<r<<endl;
